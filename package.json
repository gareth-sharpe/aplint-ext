{
 "name": "sf-core-aplint-ext",
 "displayName": "APLint",
 "publisher": "APLint",
 "icon": "assets/logo.png",
 "version": "1.0.4",
 "description": "VSCode extension for APLint",
 "main": "dist/index.js",
 "scripts": {
  "vscode:prepublish": "npm run compile",
  "compile": "tsc -p ./ && npm run move",
  "lint": "tslint -p ./",
  "watch": "tsc -watch -p ./",
  "package": "vsce package",
  "move": "cp README.md ./dist/README.md && cp -R assets ./dist/assets"
 },
 "keywords": [
  "Salesforce",
  "Apex",
  "Visualforce"
 ],
 "bugs": {
  "url": "https://github.com/gareth-sharpe/aplint-ext/issues",
  "email": "gareth_sharpe@manulife.com"
 },
 "repository": {
  "type": "git",
  "url": "https://github.com/gareth-sharpe/aplint-ext.git"
 },
 "engines": {
  "vscode": "^1.34.0"
 },
 "activationEvents": [
  "*"
 ],
 "contributes": {
  "commands": [
   {
    "command": "extension.APLint:Run",
    "title": "APLint: Run"
   },
   {
    "command": "extension.APLint:ClearProblems",
    "title": "APLint: Clear Problems"
   }
  ],
  "configuration": {
    "type": "object",
    "title": "APLint Configuration",
    "properties": {
      "aplint.customRulesets": {
        "type": "array",
        "items": {
          "type": "string"
        },
        "default": [],
        "description": "Path(s) to PMD ruleset XML file(s).",
        "format": "*.xml",
        "pattern": "*.xml"
      }
    }
  },
  "menus": {
    "commandPalette": [
      {
          "when": "resourceLangId == 'apex'",
          "command": "extension.APLint:Run",
          "group": "aplint"
      },
      {
        "when": "resourceLangId == 'apex'",
        "command": "extension.APLint:ClearProblems",
        "group": "aplint"
      }
    ],
    "editor/title": [
      {
          "when": "resourceLangId == 'apex'",
          "command": "extension.APLint:Run",
          "group": "aplint"
      },
      {
        "when": "resourceLangId == 'apex'",
        "command": "extension.APLint:ClearProblems",
        "group": "aplint"
      }
    ],
    "touchBar": [
      {
        "when": "resourceLangId == 'apex'",
        "command": "extension.APLint:Run",
        "group": "aplint"
      },
      {
        "when": "resourceLangId == 'apex'",
        "command": "extension.APLint:ClearProblems",
        "group": "aplint"
      }
    ]
  },
  "languages": [
   {
    "id": "apex",
    "extensions": [
     ".apxc",
     ".cls",
     ".trigger"
    ],
    "aliases": [
     "Apex"
    ]
   },
   {
    "id": "visualforce",
    "extensions": [
     ".page",
     ".component"
    ],
    "aliases": [
     "VisualForce",
     "Visualforce"
    ]
   }
  ]
 },
 "galleryBanner": {
  "color": "#C80000",
  "theme": "dark"
 },
 "categories": [
  "Linters"
 ],
 "author": "Gareth Sharpe",
 "license": "ISC",
 "dependencies": {
  "@types/node": "^12.0.10",
  "@types/vscode": "^1.35.0",
  "@types/webpack": "^4.4.34",
  "csv-string": "^3.1.6",
  "node-fetch": "^2.6.0",
  "tslint": "^5.18.0",
  "typescript": "^3.5.2"
 },
 "devDependencies": {
  "ts-loader": "^6.0.4",
  "vscode": "^1.1.35",
  "webpack": "^4.35.2",
  "webpack-cli": "^3.3.5",
  "webpack-plugin-copy": "^1.0.1"
 }
}
