{
 "name": "sf-core-aplint-ext",
 "displayName": "APLint",
 "publisher": "APLint",
 "icon": "assets/logo.png",
 "version": "1.0.9",
 "description": "VSCode extension for APLint",
 "main": "dist/index.js",
 "scripts": {
  "vscode:prepublish": "npm run compile",
  "compile": "tsc -p ./ && npm run move",
  "lint": "tslint -p ./",
  "watch": "tsc -watch -p ./",
  "package": "vsce package",
  "move": "npm run move:readme && npm run  move:assets && npm run move:config && npm run move:docs",
  "move:readme": "cp README.md ./dist/README.md",
  "move:assets": "cp -R assets ./dist",
  "move:config": "cp -R config ./dist",
  "move:docs": "cp -R src/docs ./dist",
  "doc": "typedoc --excludeExternals --ignoreCompilerErrors --out docs/ --name sf-core-aplint-ext",
  "doc:open": "npm run doc && node ./src/utils/docs.ts"
 },
 "keywords": [
  "Salesforce",
  "Apex",
  "Visualforce"
 ],
 "bugs": {
  "url": "https://github.com/gareth-sharpe/aplint-ext/issues",
  "email": "gareth_sharpe@manulife.com"
 },
 "repository": {
  "type": "git",
  "url": "https://github.com/gareth-sharpe/aplint-ext.git"
 },
 "engines": {
  "vscode": "^1.34.0"
 },
 "activationEvents": [
  "*"
 ],
 "contributes": {
  "commands": [
   {
    "command": "extension.APLint:RunOnFile",
    "title": "APLint: Run On File"
   },
   {
    "command": "extension.APLint:RunOnDirectory",
    "title": "APLint: Run On Directory"
   },
   {
    "command": "extension.APLint:ClearProblems",
    "title": "APLint: Clear Problems"
   }
  ],
  "configuration": {
   "type": "object",
   "title": "APLint",
   "properties": {
    "aplint.customRulesets": {
     "type": "array",
     "items": {
      "type": "string"
     },
     "default": [],
     "description": "Path(s) to PMD ruleset XML file(s): aplint.customRulesets",
     "format": "*.xml",
     "pattern": "*.xml"
    },
    "aplint.lintingProfile": {
     "type": "string",
     "enum": [
      "Manulife",
      "Default",
      "Strict",
      "Moderate",
      "Lenient"
     ],
     "default": "Manulife",
     "description": "The linting profile to adhere to."
    }
   }
  },
  "configurationDefaults": {
   "[apex]": {
    "editor.lightbulb.enabled": true,
    "keyboard.touchbar.enabled": true
   }
  },
  "menus": {
   "commandPalette": [
    {
     "when": "resourceLangId == 'apex'",
     "command": "extension.APLint:RunOnFile",
     "group": "aplint"
    },
    {
     "when": "resourceLangId == 'apex'",
     "command": "extension.APLint:RunOnDirectory",
     "group": "aplint"
    },
    {
     "when": "resourceLangId == 'apex'",
     "command": "extension.APLint:ClearProblems",
     "group": "aplint"
    }
   ],
   "editor/title": [
    {
     "when": "resourceLangId == 'apex'",
     "command": "extension.APLint:RunOnFile",
     "group": "aplint"
    },
    {
     "when": "resourceLangId == 'apex'",
     "command": "extension.APLint:RunOnDirectory",
     "group": "aplint"
    },
    {
     "when": "resourceLangId == 'apex'",
     "command": "extension.APLint:ClearProblems",
     "group": "aplint"
    }
   ],
   "touchBar": [
    {
     "when": "resourceLangId == 'apex'",
     "command": "extension.APLint:RunOnFile",
     "group": "aplint"
    },
    {
     "when": "resourceLangId == 'apex'",
     "command": "extension.APLint:RunOnDirectory",
     "group": "aplint"
    },
    {
     "when": "resourceLangId == 'apex'",
     "command": "extension.APLint:ClearProblems",
     "group": "aplint"
    }
   ]
  },
  "languages": [
   {
    "id": "apex",
    "extensions": [
     ".apxc",
     ".cls",
     ".trigger"
    ],
    "aliases": [
     "Apex"
    ]
   },
   {
    "id": "visualforce",
    "extensions": [
     ".page",
     ".component"
    ],
    "aliases": [
     "VisualForce",
     "Visualforce"
    ]
   }
  ]
 },
 "galleryBanner": {
  "color": "#C80000",
  "theme": "dark"
 },
 "categories": [
  "Linters"
 ],
 "author": "Gareth Sharpe",
 "license": "ISC",
 "dependencies": {
  "@types/node": "^12.0.10",
  "@types/vscode": "^1.35.0",
  "@types/webpack": "^4.4.34",
  "csv-string": "^3.1.6",
  "node-fetch": "^2.6.0",
  "opn": "^6.0.0",
  "tsdoc": "0.0.4",
  "tslint": "^5.18.0",
  "typescript": "^3.5.2"
 },
 "devDependencies": {
  "ts-loader": "^6.0.4",
  "vscode": "^1.1.35",
  "webpack": "^4.35.2",
  "webpack-cli": "^3.3.5",
  "webpack-plugin-copy": "^1.0.1"
 }
}
